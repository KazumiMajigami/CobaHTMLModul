        .card { background: white; border-radius: 10px; padding: 20px; margin: 20px 0; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
        h2 { color: #333; border-bottom: 3px solid #4CAF50; padding-bottom: 5px; }
        .before { background: #ffebee; padding: 10px; border-left: 5px solid #f44336; margin: 10px 0; }
        .after { background: #e8f5e9; padding: 10px; border-left: 5px solid #4CAF50; margin: 10px 0; }
    </style>
