    <div class="container">
        <div class="card">
            <h1 style="text-align: center;">üìù BAB 10: VALIDASI FORM</h1>
            
            <!-- FORM BEFORE (tanpa validasi) -->
            <div style="background: #ffebee; padding: 15px; margin-bottom: 30px;">
                <h3 style="color: #f44336;">‚ùå BEFORE: Form Tanpa Validasi</h3>
                <form>
                    <div style="margin-bottom: 10px;">
                        <label>Nama:</label><br>
                        <input type="text" style="width:100%; padding:5px;" value="12345^%$#">
                    </div>
                    <div style="margin-bottom: 10px;">
                        <label>Email:</label><br>
                        <input type="text" style="width:100%; padding:5px;" value="bukanemail">
                    </div>
                    <button type="submit" style="padding:5px 15px;">Submit</button>
                </form>
                <p><i>Bisa diisi apa saja, termasuk karakter aneh dan email tidak valid</i></p>
            </div>
            
            <!-- FORM AFTER (dengan validasi) -->
            <div style="background: #e8f5e9; padding: 15px;">
                <h3 style="color: #4CAF50;">‚úÖ AFTER: Form Dengan Validasi JavaScript</h3>
                <form id="registrationForm" onsubmit="return validasiForm()">
                    <h2>Formulir Pendaftaran</h2>
                    
                    <div class="form-group">
                        <label for="nama">Nama Lengkap</label>
                        <span class="separator">:</span>
                        <input type="text" id="nama" name="nama">
                    </div>
                    <div id="errorNama" class="error">Nama hanya boleh huruf dan spasi!</div>
                    
                    <div class="form-group">
                        <label for="tempat">Tempat Lahir</label>
                        <span class="separator">:</span>
                        <input type="text" id="tempat" name="tempat">
                    </div>
                    <div id="errorTempat" class="error">Tempat lahir hanya boleh huruf!</div>
                    
                    <div class="form-group">
                        <label for="tgl">Tanggal Lahir</label>
                        <span class="separator">:</span>
                        <input type="date" id="tgl" name="tgl">
                    </div>
                    <div id="errorTgl" class="error">Tanggal lahir harus diisi!</div>
                    
                    <div class="form-group">
                        <label>Jenis Kelamin</label>
                        <span class="separator">:</span>
                        <div class="radio-group">
                            <input type="radio" name="jk" id="laki" value="Laki-laki"> 
                            <label for="laki">Laki-laki</label>
                            <input type="radio" name="jk" id="perempuan" value="Perempuan"> 
                            <label for="perempuan">Perempuan</label>
                        </div>
                    </div>
                    <div id="errorJk" class="error">Pilih jenis kelamin!</div>
                    
                    <button type="submit" class="btn-submit">Daftar</button>
                    <div id="successMsg" class="success"></div>
                </form>
            </div>
            
            <div style="margin-top: 20px; padding: 15px; background: #fff3cd; border-left: 5px solid #ffc107;">
                <strong>üìå Petunjuk:</strong> Coba isi form dengan data tidak valid untuk melihat validasi
            </div>
        </div>
    </div>
    
    <script>
        function validasiForm() {
            // Reset pesan error
            document.getElementById("errorNama").style.display = "none";
            document.getElementById("errorTempat").style.display = "none";
            document.getElementById("errorTgl").style.display = "none";
            document.getElementById("errorJk").style.display = "none";
            document.getElementById("successMsg").innerHTML = "";
            
            // Ambil nilai input
            let nama = document.getElementById("nama").value.trim();
            let tempat = document.getElementById("tempat").value.trim();
            let tgl = document.getElementById("tgl").value;
            let jk = document.querySelector('input[name="jk"]:checked');
            
            let valid = true;
            
            // Validasi Nama (hanya huruf dan spasi)
            let polaNama = /^[a-zA-Z\s]+$/;
            if (!polaNama.test(nama)) {
                document.getElementById("errorNama").style.display = "block";
                valid = false;
            }
            
            // Validasi Tempat Lahir (hanya huruf)
            let polaTempat = /^[a-zA-Z\s]+$/;
            if (!polaTempat.test(tempat)) {
                document.getElementById("errorTempat").style.display = "block";
                valid = false;
            }
            
            // Validasi Tanggal Lahir
            if (tgl === "") {
                document.getElementById("errorTgl").style.display = "block";
                valid = false;
            }
            
            // Validasi Jenis Kelamin
            if (!jk) {
                document.getElementById("errorJk").style.display = "block";
                valid = false;
            }
            
            // Jika validasi berhasil
            if (valid) {
                document.getElementById("successMsg").innerHTML = "‚úÖ Pendaftaran berhasil! Data valid.";
                // Reset form setelah 2 detik (simulasi sukses)
                setTimeout(() => {
                    document.getElementById("registrationForm").reset();
                    document.getElementById("successMsg").innerHTML = "";
                }, 2000);
            }
            
            return false; // Mencegah form submit
        }
    </script>
