        button { background: #4CAF50; color: white; border: none; padding: 8px 15px; border-radius: 3px; cursor: pointer; margin: 5px; }
        .output { background: #333; color: white; padding: 10px; border-radius: 5px; margin: 10px 0; }
    </style>
